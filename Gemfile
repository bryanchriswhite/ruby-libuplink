source 'https://rubygems.org' do
  gem 'ffi' # Ruby FFI lib
  gem 'rake'

  group :test do
    gem 'rspec'
    gem 'rspec-wait'
    gem 'simplecov'
    gem 'launchy'
  end

  group :development do
    gem 'pry' # debugging tools / REPL
    gem 'pry-byebug' # moar debugging tools
    gem 'rake-compiler'
    gem 'guard'
    gem 'guard-rake'
    # gem 'rice' # defining and doing ruby things in C.
  end
end
